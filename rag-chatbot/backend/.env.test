# Test environment configuration

# Application Settings
DEBUG=true
LOG_LEVEL=DEBUG
LOG_JSON=true
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["*"]

# Database Settings for Testing
## MongoDB - Using test database
MONGO_URI=mongodb://mongo:27017/test_ragchatbot
MONGO_DB_NAME=test_ragchatbot

## PostgreSQL - Using test database
POSTGRES_URI=postgresql://postgres:postgres@postgres:5432/test_ragchatbot
