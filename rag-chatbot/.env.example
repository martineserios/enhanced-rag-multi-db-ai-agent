# filepath: .env.example
# Environment Variables for RAG Chatbot
# Copy this file to .env and update the values as needed

# ======================
# Application Settings
# ======================
DEBUG=false
LOG_LEVEL=INFO
LOG_JSON=true
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["*"]

# ======================
# LLM Provider API Keys
# ======================
# Uncomment and set your API keys as needed
# OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# GROQ_API_KEY=your_groq_api_key_here

# ======================
# Database Settings
# ======================

## MongoDB (Episodic Memory)
MONGO_URI=mongodb://mongo:27017/ragchatbot
MONGO_DB_NAME=ragchatbot

## PostgreSQL (Relational Database)
POSTGRES_URI=postgresql://postgres:postgres@postgres:5432/ragchatbot
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ragchatbot

## Redis (Short-term Memory)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

## Neo4j (Procedural Memory)
NEO4J_URI=neo4j://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

## Chroma (Semantic Memory)
CHROMA_HOST=chroma
CHROMA_PORT=8000

# ======================
# Frontend Settings
# ======================
BACKEND_URL=http://backend:8000

# ======================
# Docker Compose Overrides
# These values are used by docker-compose.yml
# ======================
MONGO_URI=mongodb://mongo:27017/ragchatbot
POSTGRES_URI=postgresql://postgres:postgres@postgres:5432/ragchatbot
CHROMA_HOST=chroma
CHROMA_PORT=8000
REDIS_HOST=redis
REDIS_PORT=6379
NEO4J_URI=neo4j://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# ======================
# Volume Paths (Docker)
# ======================
# These are the volume paths used in docker-compose.yml
POSTGRES_DATA=./volumes/postgres/data
MONGO_DATA=./volumes/mongo/data
CHROMA_DATA=./volumes/chroma/data
REDIS_DATA=./volumes/redis/data
NEO4J_DATA=./volumes/neo4j/data
# Memory System Settings
# ======================
MEMORY_ENABLED=true
ENABLE_SHORT_TERM_MEMORY=true
ENABLE_SEMANTIC_MEMORY=true
ENABLE_EPISODIC_MEMORY=true
ENABLE_PROCEDURAL_MEMORY=true

# ======================
# Model Settings
# ======================
DEFAULT_LLM_PROVIDER=groq
OPENAI_MODEL=gpt-4o
ANTHROPIC_MODEL=claude-3-sonnet-20240229
GROQ_MODEL=llama-3.3-70b-versatile
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# ======================
# Testing Configuration
# ======================
# Uncomment these for testing
# TESTING=false
# PYTHONPATH=/app